{
    "extends": "eslint:recommended",

    "parserOptions": {
        "ecmaVersion": 2020
    },

    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },

    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "camelcase": "error",
        "no-var": "error",
        "no-multi-spaces": "error",
        "no-trailing-spaces": "error"
    },

    "parserOptions": {
        "sourceType": "module",
    }
}